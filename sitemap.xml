---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns:mobile="http://www.google.com/schemas/sitemap-mobile/1.0"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Blog Posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    {% if post.image %}
    <image:image>
      <image:loc>{{ site.url }}{{ post.image }}</image:loc>
      <image:title>{{ post.title }}</image:title>
      <image:caption>{{ post.description | default: post.excerpt | strip_html | truncate: 160 }}</image:caption>
    </image:image>
    {% endif %}
  </url>
  {% endfor %}
  
  <!-- Notes -->
  {% for note in site.notes %}
  <url>
    <loc>{{ site.url }}{{ note.url }}</loc>
    <lastmod>{{ note.last_modified_at | default: note.date | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
  
  <!-- Static Pages -->
  {% for page in site.pages %}
    {% unless page.url contains '404' or page.url contains 'sitemap' or page.url contains 'robots' or page.url contains 'feed' %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <lastmod>{{ page.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
    {% endunless %}
  {% endfor %}
  
  <!-- Category Pages -->
  {% for category in site.categories %}
  <url>
    <loc>{{ site.url }}/categories/{{ category[0] | slugify }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endfor %}
  
  <!-- Tag Pages -->
  {% for tag in site.tags %}
  <url>
    <loc>{{ site.url }}/tags/{{ tag[0] | slugify }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.4</priority>
  </url>
  {% endfor %}
</urlset>
